---
import { ClientRouter } from 'astro:transitions';

// My CSS
import '/src/styles/global.css';

const { title } = Astro.props;
---

<html lang="en">

<head>
    <title>{title}</title>
    <ClientRouter />
    
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Chesstheory" />
	<meta name="author" content="Chesstheory LLC" />

    <link href="/resources/fontawesome/css/all.min.css" rel="stylesheet">

    <script src="/src/scripts/animations.js"></script>
    <script defer src="/src/scripts/utility.js"></script>
    
    
</head>

<body data-theme="dark">
    <noscript>
        <div class="text-center">
            <div class="centered">
                <h1>JavaScript Disabled</h1>
                <p>This portfolio website requires JavaScript in order to function properly and provide a stunning experience. <b>Please enable JavaScript.</b></p>
                <p>Don't worry--the only cookies I'm using are for user accessibility preferences on this site, and will not exist outside of this site.</p>
            </div>
        </div>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            html, body {
                overflow: hidden;
            }

            .text-center {
                position: fixed;
                width: 100%;
                height: 100%;
                z-index: 100000;
                background-color: #222222;
                color: #ffffff;
            }
            
            .centered {
                position: absolute;
                text-align: center;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                -ms-transform: translate(-50%, -50%);
            }

            .text-center h1 {
                font-family: "Kanit Semibold", Arial Black;
                font-size: 2.5rem;
            }

            .text-center p {
                font-family: "Kanit Light", Calibri;
                font-size: 1.25rem;
                letter-spacing: 0.35px;
                padding: 1rem 0;
            }

            .text-center p b {
                font-family: "Kanit Medium", Calibri;
                font-size: 1.25rem;
            }
        </style>
    </noscript>

    <div class="cursor"></div>

    <div id="smooth-wrapper">
    <div id="smooth-content">

    <slot />

    </div>
    </div>
    
</body>

</html>
